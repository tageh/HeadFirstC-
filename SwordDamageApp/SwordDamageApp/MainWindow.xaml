<Window x:Class="SwordDamageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordDamageApp"
        mc:Ignorable="d"
        Title="Sword Damage" Height="175" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <CheckBox x:Name="flaiming" Content="Flaiming" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Checked="Flaming_Checked" Unchecked="Magic_Unchecked"/>
        <CheckBox x:Name="magic" Content="Magic" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button Content="Roll for damage" Margin="75,14,75,13" Grid.Row="1" RenderTransformOrigin="-0.836,0.164" Grid.ColumnSpan="2" Click="Button_Click"/>
        <TextBox x:Name="damage" Margin="80,0,79,0" Grid.Row="2" TextWrapping="Wrap" Text="Damage" VerticalAlignment="Center" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
